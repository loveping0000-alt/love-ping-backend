# Love Ping Backend Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=production

# Database (if using MongoDB/PostgreSQL)
DATABASE_URL=mongodb://localhost:27017/loveping
# DATABASE_URL=postgresql://username:password@localhost:5432/loveping

# Payment Gateway API Keys
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Paytm Gateway
PAYTM_MERCHANT_ID=your_paytm_merchant_id
PAYTM_MERCHANT_KEY=your_paytm_merchant_key
PAYTM_ENVIRONMENT=TEST  # Change to PROD for production

# Content Storage (AWS S3 or similar)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=loveping-content
AWS_REGION=ap-south-1

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Content Delivery Network
CDN_BASE_URL=https://cdn.loveping.com

# Admin API Key
ADMIN_API_KEY=your_admin_api_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,https://loveping.com,https://app.loveping.com
